<div class="p-20 h-screen w-screen flex flex-col-reverse md:flex-row items-center justify-center bg-gray-200">
  <div class="content text-3xl text-center md:text-left">
    <h1 class="text-5xl text-purple-500 font-bold">Ywitter</h1>
    <p>Connect with friends and the world around you on Ywitter.</p>
  </div>
  <div class="container mx-auto flex flex-col items-center">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'shadow-lg w-80 p-4 flex flex-col bg-white rounded-lg' }) do |f| %>
      <h1 class="text-xl text-purple-500 font-bold">Login</h1>
      <br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'mb-3 py-3 px-4 border border-gray-400 focus:outline-none rounded-md focus:ring-1 ring-cyan-500' %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'mb-3 py-3 px-4 border border-gray-400 focus:outline-none rounded-md focus:ring-1 ring-cyan-500' %>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", :class=> 'w-full bg-purple-500 text-white p-3 rounded-lg font-semibold text-lg' %>
      </div>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:'text-purple-400 text-center my-2' %>
      <hr />
    <% end %>

    <span class="text-purple-400 mt-4 mb-2 text-center">Don't have an account?</span>
    <h2 class="w-80 bg-gray-500 mb-4 text-white p-3 rounded-lg font-semibold text-lg text-center"><%= link_to "Sign up", new_registration_path(resource_name)%></h2>
  </div>
</div>